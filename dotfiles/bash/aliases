# TIPS
# ----
# !79                  > rerun the command 79 in the history
# !echo                > rerun the last command with 'echo' in the history
# ^r ^g                > do a reverse search, then cancel
# mv README{.txt,.doc} > change extension without retyping the name

# SHELL
# -----
alias  l='ls -la'
alias  h='history' 
alias md='mkdir -p'
alias cx='chmod +x'
alias rf='rm -rf'

# DOTFILES
# --------
alias sb='source ~/.bashrc'
alias reload='source ~/bin/dotfiles/bash/aliases'
alias ea='mate -w ~/bin/dotfiles/bash/aliases && reload'
alias ee="mate ~/bin/dotfiles/bash/env"

# GIT
# ---
alias gs='git status'
alias gd='git diff'
alias gh='git diff HEAD HEAD~'
alias ga='git add'
alias gl='git log'
alias gu='git pull'
alias gm='git mv'
alias gcl='git clone'
alias gc='git commit'
alias gb='git branch'
alias grb='git branch -r'
alias gp='git push'
function gg() { # git commit that reads the message from the same line
    git add . 
    git commit -v -a -m "$*"
}
alias ungit="find . -name '.git' -exec rm -rf {} \;"

# RAKE
# ----
alias rdm='rake db:migrate'
alias rds='rake db:setup'
alias rdr='rake db:rollback'

# RAILS
# -----
alias  r='rails'
alias rv='rails server'
# alias rc='rails console' use pry if installed
function rc {
  if which pry >/dev/null; then
    pry # This also load Rails -- check .pryrc
  else
    rails console
  fi
}
alias rg='rails generate'
alias rgm='rails generate migration'
function rn {
  cd ~/code;
  rails new $* --skip-gemfile --skip-prototype --database=mysql;
  cd $1;
  cp ../Gemfile .;
  bundle;
}

# BUNDLER
# -------
alias be='bundle exec'
alias bi='bundle install'

# RBENV
# -----
function gi {
  gem install $*; 
  rbenv rehash;
}

# SVN
# ---
alias unsvn="find . -name '.svn' -exec rm -rf {} \;"

# CUSTOM DROPBOX
# --------------
PPFILE='__drop__.zip'
PPTO='gollum'

function push {
  rm -f $PPFILE
  zip -r $PPFILE $*
  scp $PPFILE $PPTO:
  rm -f $PPFILE
}

function pull {
  rm -f $PPFILE
  scp $PPTO:$PPFILE .
  ssh $PPTO rm -f $PPFILE
  unzip $PPFILE
  rm -f $PPFILE
}

# TEXTMATE
# --------
alias  m='mate'

# TOP
# ---
alias tc='top -o cpu'
alias tv='top -o vsize'

# ZIP
# ---
function zipr() {
  zip -r $1.zip $1
}

